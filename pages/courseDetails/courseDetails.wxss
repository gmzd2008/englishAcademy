/**
课程评论
**/
.msg_list {
  padding: 10px;
}

.msg_list .tt {
  font-size: 14px;
  height: 40px;
  line-height: 40px;
}

.msg_list .pic {
  width: 10%;
}

.msg_list .pic image {
  width: 100%;
  border-radius: 100%;
}

.msg_list .info {
  width: 88%;
}

.msg_list .tit {
  font-size: 12px;
  height: 24px;
  line-height: 22px;
}

.msg_list .txt {
  font-size: 12px;
  color: #999;
  line-height: 22px;
}

.msg_list .date {
  font-size: 12px;
  color: #999;
  line-height: 22px;
}

.msg_list .message-box {
  padding: 5px 0px;
  border-bottom: 1px dotted #eee;
}

.msg_bottom {
  height: 45px;
}

.msg_box {
  height: 45px;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  border-top: 1px solid #eee;
  background: #fff;
  display: flex;
}

.msg_box .voice {
  overflow: hidden;
  margin-left: 30rpx;
  width: 12%;
}

.msg_box .voice image {
  width: 40rpx;
  height: 40rpx;
}

.msg_box .remark {
  width: 80%;
  background: #ccc;
}

.msg_box view {
  height: 25px;
  line-height: 25px;
  margin: 10px 0;
  font-size: 12px;
  text-indent: 10px;
}

.c_box {
  background: #f9fafc;
  border: 1px solid #e2e6e9;
  padding: 10rpx;
  border-radius: 8px;
  margin-bottom: 10px;
  margin-left: 10px;
  margin-right: 10px
}

.myVideo{
  width:100%;
  display:flex;
  line-height:0;
  overflow:hidden;
  position:relative;
  z-index:0;
}