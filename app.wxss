/* 搜索框 */

.header {
    width: 100%;
    height: 68rpx;
    padding: 6rpx 10rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background: #F0151D;
    text-align: center;
}

.header .search {
    padding: 0 20rpx;
}

.header-search {
    margin: 0 auto;
    width: 680rpx;
    height: 68rpx;
    line-height: 68rpx;
    border-radius: 39rpx;
    border: 1px soid #D8151F;
    background: #D8151F;
    color: #fff;
    font-size: 24rpx;
}

.border-title {
    border-left: 6px solid #e94840;
    padding-left: 10px;
    height: 18px;
    line-height: 18px;
    font-size: 18px;
}

.container {
    margin:0 20rpx;
    display: flex;
    flex-flow: row wrap;
    box-sizing: border-box;
    justify-content: center;
}
.kefu{
    position: relative
}
.kf_btn{
    opacity: 0;
    position: absolute;
    left:0;
    top:0;
    right: 0;
    bottom: 0;
    z-index: 10;
}
.none{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-data{
  margin-top: 300rpx;
  width: 200rpx;
}
.none-tips{
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #c7c7c7;
}
.no-more{
    margin:20rpx 0;
    width:50%;
    height:50rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 30rpx;
    font-weight: 500rpx;
    color:#e07074;
    background-color: #eee;
}
 /* 去除button 默认样式 */
 .wx-btn,.wx-btn::after{
     padding:0;
     background:none;
     border:none;
     content:none;
 }